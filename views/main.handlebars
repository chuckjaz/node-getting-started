<h1>List of books</h1>

<table class="book-list">
  <tr>
    <td>Author</td>
    <td>Title</td>
  </tr>
  {{#rpt books}}
  <tr>
    <td>{{author}}</td>
    <td>{{title}}</td>
  </tr>
  {{/rpt}}
</table>

<form action="/add" method="post">
  <div>Add a new book:</div>
  <table>
    <tr>
      <td>Author:</td>
      <td><input name="author" type="edit"></td>
    </tr>
    <tr>
      <td>Title:</td>
      <td><input name="title" type="edit">
      <td><input type="submit" value="Add"></td>
    <tr>
  </table>
</form>
